---
import { Button } from "@/components/ui/button";
import { Linkedin, Instagram, Facebook, Mail } from "lucide-react";
---

<footer class="bg-[#101010] text-white border-t border-[#2a2a2a] rounded-t-3xl shadow-lg">
    <div class="max-w-7xl mx-auto px-6 pt-12 pb-4">
      {/* Bloc principal centré */}
      <div class="text-left sm:text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4">
          Nous contacter
        </h1>
        <p class="text-base sm:text-lg text-gray-300 mb-2">
          Vous avez une question, un projet ou autre ?<br />
          Et vous souhaitez me contacter ?
        </p>
        <div class="mt-6 flex sm:justify-center">
          <a
            href="/contact"
            class="bg-[#635BFF] text-white font-semibold px-6 py-3 rounded-xl shadow hover:bg-[#7D76FF] hover:scale-105 hover:shadow-lg transition-all duration-200"
          >
            Ça se passe juste ici
          </a>
        </div>
      </div>

      {/* Séparateur */}
      <div class="border-t border-[#2a2a2a] my-8" />

      {/* Bas de page : liens légaux, réseaux, copyright */}
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-sm">
        {/* Liens légaux */}
        <div class="flex gap-6 text-gray-400 order-2 sm:order-1">
          <a href="#" class="hover:text-[#635BFF] transition-colors">
            Mentions Légales
          </a>
          <a href="#" class="hover:text-[#635BFF] transition-colors">
            Politique de confidentialité
          </a>
          <a href="#" class="hover:text-[#635BFF] transition-colors">
            Plan du site
          </a>
        </div>

        {/* Réseaux sociaux */}
        <div class="flex gap-4 order-3 sm:order-3">
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener"
            aria-label="LinkedIn"
            class="hover:text-[#635BFF] transition-colors"
          >
            <Linkedin className="w-6 h-6" />
          </a>
          <a
            href="https://www.instagram.com/"
            target="_blank"
            rel="noopener"
            aria-label="Instagram"
            class="hover:text-[#635BFF] transition-colors"
          >
            <Instagram className="w-6 h-6" />
          </a>
          <a
            href="https://www.facebook.com/"
            target="_blank"
            rel="noopener"
            aria-label="Facebook"
            class="hover:text-[#635BFF] transition-colors"
          >
            <Facebook className="w-6 h-6" />
          </a>
          <a
            href="https://www.gmail.com/"
            target="_blank"
            rel="noopener"
            aria-label="Mail"
                class="hover:text-[#635BFF] transition-colors"
          >
            <Mail className="w-6 h-6" />
          </a>
        </div>
      </div>

      {/* Copyright */}
      <div class="mt-8 text-center text-gray-400 text-xs">
        Design & Dev With <span class="text-red-400">♥</span> by Michel -
        2025
      </div>
    </div>
  </footer>
