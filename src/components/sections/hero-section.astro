---
import HeroAnimations from './hero-animation';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  {/* Fond décoratif avec dégradé subtil */}
  <div class="absolute inset-0 bg-gradient-to-br from-[#F2F2FF] via-white to-white opacity-20"></div>
  <div class="absolute top-20 left-10 w-32 h-32 bg-[#635BFF] rounded-full opacity-5 blur-3xl"></div>
  <div class="absolute bottom-20 right-10 w-40 h-40 bg-[#7D76FF] rounded-full opacity-3 blur-3xl"></div>

  <!-- Composant React hydraté -->
  <HeroAnimations client:load />
</section>

<style>
  /* Optimisation des polices */
  h1 {
    font-feature-settings: "liga" 1, "kern" 1;
    letter-spacing: -0.02em;
  }
  button:hover {
    transform: translateY(-2px);
  }
</style>
